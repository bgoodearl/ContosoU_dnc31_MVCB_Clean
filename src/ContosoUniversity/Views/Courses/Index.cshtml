@using ContosoUniversity.Components.Courses
@using CU.Application.Shared.ViewModels.Courses
@model CoursesListViewModel
@{
    @if (Model.ViewMode >= 0)
    {
        Layout = "~/Views/Shared/_LayoutBlazor.cshtml";
    }
    ViewData["Title"] = "Courses";
}
@if (Model.ViewMode < 0)
{
    <h1 class="h2">Courses - MVC</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    @await Html.PartialAsync("Partial/CourseListPartial", Model.CourseList)
}
else
{
    <component type="typeof(Courses)" render-mode="Server" param-CoursesVM="Model" />
}
