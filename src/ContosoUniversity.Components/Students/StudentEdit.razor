<EditForm Model="@Student2Edit" OnValidSubmit="@HandleValidSubmitAsync">
    <DataAnnotationsValidator />
    <ValidationSummary />

    @if (!string.IsNullOrWhiteSpace(Message))
    {
        <p>@Message</p>
    }

<table>
    <tr>
        <th>First/Middle Name:</th>
        <td><InputText id="firstMid" @bind-Value="Student2Edit.FirstMidName" /></td>
    </tr>
    <tr>
        <th>Last Name:</th>
        <td><InputText id="last" @bind-Value="Student2Edit.LastName" /></td>
    </tr>
    <tr>
        <th>Enrollment Date:</th>
        <td><InputDate id="enrollment" @bind-Value="Student2Edit.EnrollmentDate" /></td>
    </tr>
    <tr>
        <td colspan="2"><button class="btn" style="background-color:lightgray;" type="submit">Save</button>
        <button @onclick="() => OnReturnToList()" class="btn" style="background-color:lightgray;" type="button">Cancel</button></td>
    </tr>
</table>

</EditForm>
